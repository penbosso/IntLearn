rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read/write their own data and public data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow any authenticated user to read public collections like courses and badges
    match /courses/{courseId} {
      allow read: if request.auth != null;
    }
    
    match /courses/{courseId}/{subcollection}/{docId} {
      allow read: if request.auth != null;
    }

    match /badges/{badgeId} {
      allow read: if request.auth != null;
    }

    // Rules for admin/creator roles
    match /courses/{courseId} {
      // Admins/creators can create, update, delete courses
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['admin', 'creator']);
    }
    
    match /courses/{courseId}/{subcollection}/{docId} {
      // Admins/creators can manage content within courses
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['admin', 'creator']);
    }

    // Rules for accounting
    match /accounts/{accountId}/{document=**} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['admin', 'accountant']);
    }
    
    // Rules for notifications - allow any authenticated user to read/write for now
    // This allows the notification system to work for all logged-in users.
    match /notifications/{notificationId} {
        allow read, write: if request.auth != null;
    }
  }
}